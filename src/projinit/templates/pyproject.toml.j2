[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ description }}"
readme = "README.md"
license = "MIT"
requires-python = ">={{ python_version | default('3.10') }}"
{% if author_name %}
authors = [
    { name = "{{ author_name }}"{% if author_email %}, email = "{{ author_email }}"{% endif %} }
]
{% endif %}
keywords = []
classifiers = [
    "Development Status :: 3 - Alpha",
{% if project_type == "python-cli" %}
    "Environment :: Console",
{% endif %}
    "Intended Audience :: Developers",
    "License :: OSI Approved :: MIT License",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.10",
    "Programming Language :: Python :: 3.11",
    "Programming Language :: Python :: 3.12",
]

dependencies = []

{% if project_type == "python-cli" %}
[project.scripts]
{{ project_name_snake }} = "{{ project_name_snake }}.cli:main"
{% endif %}

[tool.hatch.build.targets.wheel]
packages = ["src/{{ project_name_snake }}"]

[dependency-groups]
dev = [
    "pytest>=8.0.0",
    "pytest-cov>=4.1.0",
    "ruff>=0.8.0",
]

[tool.pytest.ini_options]
testpaths = ["tests"]
python_files = ["test_*.py"]
python_functions = ["test_*"]

[tool.ruff]
line-length = 100
target-version = "py310"

[tool.ruff.lint]
select = ["E", "F", "W", "I", "UP", "B", "C4"]
ignore = ["E501"]
